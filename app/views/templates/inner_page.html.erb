<% if @content_first %>
  <div class="chapter">
    <h1><%= @content_first.part_title %></h1>
    <%= render_partial_for_region @content_first if @content_first %>
  </div>
<% end %>

<% if @gallery %>
  <div class="galleria_wrapper">
    <h3>Галерея фотографий</h3>
    <div id='galleria'>
      <% @gallery.content.gallery_pictures.each do |image| %>
        <%= link_to image_tag(image_url(image.picture_url, 200, 128), :alt => image.description), image_url(image.picture_url, 1050, 700) %>
      <% end %>
    </div>
  </div>
<% end %>
